.box {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background: #343240;
}

.btn-box {
  position: absolute;
  bottom: 350rpx;
  width: 100%;
}
.btn {
  width: 410rpx;
  border-width: none;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 38rpx;
  background: linear-gradient(to right, #6f7880 0%, #babab0 100%);
  color: #eee;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .8);
  font-size: 28rpx;
}
.img-box {
  display: flex;
  justify-content: center;
  position: absolute;
  width: 100%;
  bottom: 500rpx;
}
.weixin {
  width: 250rpx;
  height: 250rpx;
}