<!--pages/create/create.wxml-->
<view class='shadow black'>
  <navigator url='/pages/search/search' class='search'>
    <image src='../../assets/image/search.png'></image>
    <view>搜索视频关键字</view>
  </navigator>

  <view class='nav'>
    <view 
      wx:for="{{navs}}" 
      wx:key="{{index}}" 
      id="{{item.id}}" 
      class="item {{index === navSelected ? 'selected' : ''}}">
      <text>{{item.name}}</text>
    </view>
  </view>
</view>

<scroll-view class='movie-list' scroll-y>
  <movie-item wx:for="{{10}}" wx:key="{{index}}"></movie-item>
</scroll-view>