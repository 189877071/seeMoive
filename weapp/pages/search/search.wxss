/* pages/search/search.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top-box {
  display: flex;
  padding: 20rpx 32rpx;
  height: 66rpx;
  border-bottom: 1px solid #1b1b1b;
  background: rgba(0, 0, 0, 0.7);
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.8);
}

.search {
  height: 66rpx;
  width: 600rpx;
  background: #342d4f;
  border-radius: 33rpx;
  display: flex;
  color: #827edf;box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  font-size: 28rpx;
}

.search image {
  width: 27rpx;
  height: 27rpx;
  margin-right: 12rpx;
}

.search input {
  flex: 1;
  font-size: 26rpx;
  color: #fff;
}

.placeholder {
  height: 25rpx;
  color: #7b76dd;
  font-size: 26rpx;
}

.clear {
  color: #fff;
  flex: 1;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.movie-list {
  flex: 1;
  overflow: hidden;
  background: rgba(0,0,0,.8);
}

.movie-item {
  display: flex;
  padding: 39rpx 30rpx 30rpx 30rpx;
  border-bottom: 1px solid #1b1b1b;
}

.photo, .movie-photo-x {
  width: 209rpx;
  height: 119rpx;
}

.photo {
  overflow: hidden;
  border-radius: 12rpx;
  position: relative;
}

.photo .time {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  color: #fff;
  font-size: 18rpx;
}

.movie-jjie {
  flex: 1;
  padding-left: 32rpx;
}

.movie-name {
  height: 61rpx;
  line-height: 61rpx;
  color: #fff;
  font-size: 28rpx;
}

.movie-laiyuan {
  height: 40rpx;
  line-height: 40rpx;
  color: #5d5b67;
  font-size: 24rpx;
}
