@import '../../assets/common.wxss';

page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top-box {
  display: flex;
  padding: 20rpx 32rpx;
  height: 66rpx;
}

.search {
  height: 66rpx;
  width: 600rpx;
  background: #fff;
  border-radius: 33rpx;
  display: flex;
  
  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  font-size: 28rpx;
}

.search image {
  width: 27rpx;
  height: 27rpx;
  margin-right: 12rpx;
}

.search input {
  flex: 1;
  font-size: 26rpx;
  color: #303031;
}

.placeholder {
  height: 25rpx;
  color: #7b76dd;
  font-size: 26rpx;
}

.clear {
  color: #fff;
  flex: 1;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.movie-list {
  flex: 1;
  overflow: hidden;
}